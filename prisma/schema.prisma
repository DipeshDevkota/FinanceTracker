datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Will use the DATABASE_URL from .env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int     @id @default(autoincrement()) // Auto-incrementing ID
  profilePic String? // Optional field (not required)
  password   String  @default("secret")
  username   String  @unique @db.VarChar(50) // Username should be unique and have a max length of 50 characters
  email      String  @unique @db.VarChar(255) // Email should be unique and have a max length of 255 characters
  posts      Post[] // One-to-many relationship with posts
}

model Transaction {
  id                Int       @id @default(autoincrement())
  price             String
  quantity          Int
  brand             String?
  dateofManufacture String
  dateofExpiry      DateTime?
  description       DateTime?  @db.VarChar(200)
  TransactionPic    String?
  Category          String
}
